{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vacgaps/constants": ["libs/constants/src/index.ts"],
      "@vacgaps/interfaces": ["libs/interfaces/src/index.ts"],
      "@vacgaps/filter-form": ["libs/filter-form/src/index.ts"],
      "@vacgaps/reports-list": ["libs/reports-list/src/index.ts"],
      "@vacgaps/vaccines-reporter": ["libs/vaccines-reporter/src/index.ts"],
      "@vacgaps/fb-login": ["libs/fb-login/src/index.ts"],
      "@vacgaps/login-modal": ["libs/login-modal/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
